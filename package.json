{
  "name": "@profico/eslint-plugin-profico",
  "repository": {
    "type": "git",
    "url": "https://github.com/profico/eslint-plugin-profico.git"
  },
  "version": "1.0.0",
  "description": "ESLint plugin by Profico",
  "main": "lib/index.js",
  "scripts": {
    "prepare": "husky install",
    "clean": "rimraf lib",
    "prebuild": "rimraf node_modules/@types/eslint/node_modules/@types/estree",
    "build": "tsc",
    "prettier": "prettier \"*.{js,json,yml,yaml,md}\" \"src/**/*\"",
    "format": "yarn prettier --write && pretty-quick --staged",
    "format:check": "pretty-quick --staged && yarn prettier --check",
    "test:base": "jest --config jest.config.json",
    "test:watch": "yarn test:base --watchAll",
    "test": "yarn test:base",
    "prepublish": "yarn run clean && yarn run build"
  },
  "files": [
    "README.md",
    "package.json",
    "lib"
  ],
  "keywords": [
    "eslint",
    "typescript",
    "profico",
    "plugin"
  ],
  "author": {
    "name": "Filip PoliÄ‡",
    "email": "fpolic@profico.hr"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/eslint": "^8.2.1",
    "@types/estree": "^0.0.50",
    "@types/node": "^17.0.5",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.5.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  }
}
