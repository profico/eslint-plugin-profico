{
  "include": ["src/configs/**/*", "src/rules/**/*", "src/index.ts"],
  "exclude": ["node_modules", "lib"],
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2018",
    "module": "ESNext",
    "lib": ["ES2018"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,

    /* Module Resolution Options */
    "moduleResolution": "node",

    /* Source Map Options */
    "sourceRoot": "",
    "mapRoot": "",
    "inlineSourceMap": true,
    "inlineSources": true,

    /* Experimental Options */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": ["./types.d.ts", "node", "eslint", "estree"]
  }
}
